#---------------------------------------------
# NODE CONFIGURATION
#---------------------------------------------

# Node identifier in hexadecimal (empty = random)
NODE_ID=

# Bind address for the gRPC server (e.g. 0.0.0.0 or private IP)
NODE_BIND=

# Publicly advertised host (used for peer connections)
NODE_HOST=

# gRPC server port (0 = automatic)
NODE_PORT=

#---------------------------------------------
# DHT CORE SETTINGS
#---------------------------------------------

# Identifier space bits (keyspace = 2^IDBits)
DHT_ID_BITS=

# Network mode: "public" (real network) | "private" (local testing)
DHT_MODE=

#---------------------------------------------
# BOOTSTRAP CONFIGURATION
#---------------------------------------------

# Bootstrap mode: "static" | "route53"
BOOTSTRAP_MODE=

# Comma-separated list of peer addresses for static bootstrap
# Example: "node1:4000,node2:4000"
BOOTSTRAP_PEERS=

# --- Route53 bootstrap mode settings ---
ROUTE53_ZONE_ID=
ROUTE53_SUFFIX=
ROUTE53_TTL=
ROUTE53_REGION=

#---------------------------------------------
# DE BRUIJN GRAPH PARAMETERS
#---------------------------------------------

# Degree of the de Bruijn graph (2, 4, 8, 16, ... power of 2)
DEBRUIJN_DEGREE=

# Periodic refresh interval for de Bruijn pointers
DEBRUIJN_FIX_INTERVAL=

#---------------------------------------------
# ðŸ—„STORAGE MAINTENANCE
#---------------------------------------------

# Periodic refresh interval for stored key-value pairs
STORAGE_FIX_INTERVAL=

#---------------------------------------------
# FAULT TOLERANCE SETTINGS
#---------------------------------------------

# Number of successors to maintain (â‰ˆ log n)
SUCCESSOR_LIST_SIZE=

# Periodic stabilization interval for successors
STABILIZATION_INTERVAL=

# Timeout for gRPC stabilization calls (mark failed successors)
FAILURE_TIMEOUT=

#---------------------------------------------
# TELEMETRY / TRACING
#---------------------------------------------

# Enable or disable distributed tracing (true | false)
TRACING_ENABLED=

# Tracing exporter: "otlp" | "jaeger"
TRACING_EXPORTER=

# Endpoint for the tracing exporter (OTLP or Jaeger)
TRACING_ENDPOINT=

#---------------------------------------------
# LOGGER CONFIGURATION
#---------------------------------------------

# Enable or disable logging
LOGGER_ENABLED=

# Minimum log level: debug | info | warn | error
LOGGER_LEVEL=

# Log encoding: console (human-readable) | json
LOGGER_ENCODING=

# Log mode: stdout | file
LOGGER_MODE=

# --- File logging options (used only if LOGGER_MODE=file) ---

# Path to log file (ignored if mode=stdout)
LOGGER_FILE_PATH=

# Maximum file size in MB before rotation
LOGGER_FILE_MAX_SIZE=

# Maximum number of rotated files to retain
LOGGER_FILE_MAX_BACKUPS=

# Maximum age in days to retain old logs
LOGGER_FILE_MAX_AGE=

# Compress old rotated log files (true | false)
LOGGER_FILE_COMPRESS=
