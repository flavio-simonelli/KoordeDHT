# -----------------------------------------------------------------------------
# LOGGER CONFIGURATION
# -----------------------------------------------------------------------------

# Abilita o disabilita il logging
# Possibili valori: true | false
LOGGER_ENABLED=true

# Livello minimo di log
# Possibili valori: debug | info | warn | error
LOGGER_LEVEL=info

# Formato di output del log
# Possibili valori: console | json
LOGGER_ENCODING=console

# Destinazione del log
# Possibili valori: stdout | file
LOGGER_MODE=stdout

# -----------------------------------------------------------------------------
# NODE CONFIGURATION
# -----------------------------------------------------------------------------

# Indirizzo di bind del server gRPC (es. 0.0.0.0)
NODE_BIND=0.0.0.0

# Porta gRPC del nodo (0 = selezione automatica)
NODE_PORT=4000

# -----------------------------------------------------------------------------
# DHT CORE SETTINGS
# -----------------------------------------------------------------------------

# Modalità della DHT
# Possibili valori: public | private
DHT_MODE=private

# Numero di bit dello spazio degli identificatori (keyspace = 2^idBits)
DHT_ID_BITS=66

# -----------------------------------------------------------------------------
# DE BRUIJN GRAPH SETTINGS
# -----------------------------------------------------------------------------

# Grado del grafo di de Bruijn (2 = minimo, log n = ottimale; deve essere potenza di 2)
DEBRUIJN_DEGREE=8

# Intervallo di aggiornamento periodico dei puntatori de Bruijn (es. 10s, 30s)
DEBRUIJN_FIX_INTERVAL=5s

# -----------------------------------------------------------------------------
# STORAGE SETTINGS
# -----------------------------------------------------------------------------

# Intervallo di aggiornamento periodico per la manutenzione dello storage
# (es. 15s, 1m)
STORAGE_FIX_INTERVAL=20s

# -----------------------------------------------------------------------------
# FAULT TOLERANCE SETTINGS
# -----------------------------------------------------------------------------

# Numero di successori da mantenere (≈ log n per tolleranza ai guasti)
SUCCESSOR_LIST_SIZE=8

# Intervallo periodico per la stabilizzazione dei successori (es. 5s, 10s)
STABILIZATION_INTERVAL=2s

# Timeout massimo per le chiamate gRPC di stabilizzazione (es. 3s)
FAILURE_TIMEOUT=1s

# -----------------------------------------------------------------------------
# BOOTSTRAP SETTINGS
# -----------------------------------------------------------------------------

# Modalità di bootstrap
# Possibili valori: static | route53
BOOTSTRAP_MODE=static

# -----------------------------------------------------------------------------
# TELEMETRY / TRACING
# -----------------------------------------------------------------------------

# Abilita o disabilita il tracing distribuito
# Possibili valori: true | false
TRACING_ENABLED=false

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
