# =============================================================================
# KoordeDHT Node Configuration (.env)
# =============================================================================
# Ogni variabile in questo file può sovrascrivere i valori del file YAML
# di configurazione del nodo KoordeDHT. Lasciare vuoto per usare i default.
# =============================================================================

# -----------------------------------------------------------------------------
# LOGGER CONFIGURATION
# -----------------------------------------------------------------------------

# Abilita o disabilita il logging
# Possibili valori: true | false
LOGGER_ENABLED=

# Livello minimo di log
# Possibili valori: debug | info | warn | error
LOGGER_LEVEL=

# Formato di output del log
# Possibili valori: console | json
LOGGER_ENCODING=

# Destinazione del log
# Possibili valori: stdout | file
LOGGER_MODE=

# Percorso del file di log (usato solo se LOGGER_MODE=file)
LOGGER_FILE_PATH=

# Dimensione massima del file di log in MB prima della rotazione
LOGGER_FILE_MAX_SIZE=

# Numero massimo di file di log ruotati da mantenere
LOGGER_FILE_MAX_BACKUPS=

# Età massima (in giorni) dei file di log vecchi da mantenere
LOGGER_FILE_MAX_AGE=

# Comprimi i log vecchi durante la rotazione
# Possibili valori: true | false
LOGGER_FILE_COMPRESS=

# -----------------------------------------------------------------------------
# NODE CONFIGURATION
# -----------------------------------------------------------------------------

# Identificatore del nodo in formato esadecimale
NODE_ID=

# Indirizzo di bind del server gRPC (es. 0.0.0.0)
NODE_BIND=

# Host pubblico o indirizzo pubblicizzato agli altri nodi
NODE_HOST=

# Porta gRPC del nodo (0 = selezione automatica)
NODE_PORT=

# -----------------------------------------------------------------------------
# DHT CORE SETTINGS
# -----------------------------------------------------------------------------

# Modalità della DHT
# Possibili valori: public | private
DHT_MODE=

# Numero di bit dello spazio degli identificatori (keyspace = 2^idBits)
DHT_ID_BITS=

# -----------------------------------------------------------------------------
# DE BRUIJN GRAPH SETTINGS
# -----------------------------------------------------------------------------

# Grado del grafo di de Bruijn (2 = minimo, log n = ottimale; deve essere potenza di 2)
DEBRUIJN_DEGREE=

# Intervallo di aggiornamento periodico dei puntatori de Bruijn (es. 10s, 30s)
DEBRUIJN_FIX_INTERVAL=

# -----------------------------------------------------------------------------
# STORAGE SETTINGS
# -----------------------------------------------------------------------------

# Intervallo di aggiornamento periodico per la manutenzione dello storage
# (es. 15s, 1m)
STORAGE_FIX_INTERVAL=

# -----------------------------------------------------------------------------
# FAULT TOLERANCE SETTINGS
# -----------------------------------------------------------------------------

# Numero di successori da mantenere (≈ log n per tolleranza ai guasti)
SUCCESSOR_LIST_SIZE=

# Intervallo periodico per la stabilizzazione dei successori (es. 5s, 10s)
STABILIZATION_INTERVAL=

# Timeout massimo per le chiamate gRPC di stabilizzazione (es. 3s)
FAILURE_TIMEOUT=

# -----------------------------------------------------------------------------
# BOOTSTRAP SETTINGS
# -----------------------------------------------------------------------------

# Modalità di bootstrap
# Possibili valori: static | route53
BOOTSTRAP_MODE=

# Elenco di peer statici (separati da virgola, es. "10.0.0.2:4000,10.0.0.3:4000")
BOOTSTRAP_PEERS=

# --- Route53 bootstrap mode ---

# ID della hosted zone AWS Route53
ROUTE53_ZONE_ID=

# Suffisso del dominio SRV (es. koorde.dht)
ROUTE53_SUFFIX=

# TTL dei record SRV in secondi
ROUTE53_TTL=

# Regione AWS per le query Route53 (es. eu-central-1, us-east-1)
ROUTE53_REGION=

# -----------------------------------------------------------------------------
# TELEMETRY / TRACING
# -----------------------------------------------------------------------------

# Abilita o disabilita il tracing distribuito
# Possibili valori: true | false
TRACING_ENABLED=

# Tipo di exporter per il tracing
# Possibili valori: otlp | jaeger
TRACING_EXPORTER=

# Endpoint dell’exporter OTLP o Jaeger Collector
# Esempi: "http://tempo:4318" | "http://jaeger:14268/api/traces"
TRACING_ENDPOINT=

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
